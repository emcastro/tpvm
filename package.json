{
  "name": "tpvm",
  "version": "0.0.0",
  "description": "A Virtual Machine for TP",
  "respository": {
    "type": "git",
    "url": "https://emmanuel_castro@bitbucket.org/emmanuel_castro/tpvm.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "build": "gulp default && tsc",
    "pretest": "npm run build",
    "test": "jest",
    "lint": "tslint -p tsconfig.json --type-check",
    "lint-fix": "tslint -p tsconfig.json --type-check --fix",
    "autobuild": "(gulp auto &) ; tsc -w",
    "autotest": "jest --coverage --watchAll",
    "cleaner": "rm -rf coverage dist"
  },
  "dependencies": {
    "antlr4": "^4.7.0",
    "fs-es6-promise": "^0.0.3",
    "lodash": "^4.17.4",
    "mz": "^2.6.0",
    "tslint-config-standard": "^5.0.2"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/lodash": "^4.14.64",
    "@types/node": "^7.0.22",
    "ansi-colorizer": "^1.0.1",
    "babel-eslint": "^7.2.3",
    "benchmark": "^2.1.4",
    "chai": "^3.5.0",
    "child-process-data": "^0.5.1",
    "eslint": "^3.19.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "event-stream": "^3.3.4",
    "flat-map": "^0.4.0",
    "flow-bin": "^0.46.0",
    "gulp": "^3.9.1",
    "gulp-antlr4": "^0.3.2",
    "gulp-clean": "^0.3.2",
    "gulp-download": "^0.0.1",
    "gulp-file": "^0.3.0",
    "gulp-sequence": "^0.4.6",
    "jest": "^20.0.3",
    "standard": "^10.0.2",
    "tslint": "^5.3.2",
    "typescript": "^2.3.4"
  },
  "standard": {
    "plugins": [
      "flowtype"
    ],
    "parser": "babel-eslint",
    "globals": [
      "test",
      "describe",
      "it",
      "expect",
      "Iterator",
      "IteratorResult",
      "$ReadOnlyArray"
    ],
    "ignore": [
      "flow-typed",
      "src/generated"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
