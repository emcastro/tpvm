{
  "name": "tpvm",
  "version": "0.0.0",
  "description": "A Virtual Machine for TP",
  "respository": {
    "type": "git",
    "url": "https://emmanuel_castro@bitbucket.org/emmanuel_castro/tpvm.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "gulp": "gulp",
    "tsc": "tsc",
    "build": "run-s 'gulp default' tsc",
    "pretest": "npm run build",
    "test": "jest --coverage",
    "lint": "tslint -p tsconfig.json --type-check",
    "lint-fix": "tslint -p tsconfig.json --type-check --fix",
    "autobuild": "npm-run-all gulp --parallel \"gulp auto\" \"tsc -- -w\"",
    "autotest": "jest --coverage --watchAll",
    "cleaner": "rm -rf coverage dist"
  },
  "dependencies": {
    "antlr4": "4.7.0",
    "bluebird": "3.5.0",
    "fs-es6-promise": "0.0.3",
    "lodash": "4.17.4",
    "mz": "2.7.0"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.12",
    "@types/jest": "21.1.1",
    "@types/lodash": "4.14.76",
    "@types/node": "8.0.31",
    "ansi-colorizer": "1.0.1",
    "benchmark": "2.1.4",
    "chai": "4.1.2",
    "child-process-data": "0.5.5",
    "event-stream": "3.3.4",
    "flat-map": "0.4.0",
    "gulp": "3.9.1",
    "gulp-antlr4": "0.4.4",
    "gulp-clean": "0.3.2",
    "gulp-download": "0.0.1",
    "gulp-file": "0.3.0",
    "gulp-sequence": "0.4.6",
    "jest": "21.2.1",
    "npm-run-all": "^4.1.1",
    "standard": "10.0.3",
    "ts-jest": "21.0.1",
    "tslint": "5.7.0",
    "tslint-config-standard": "6.0.1",
    "typescript": "2.5.3"
  },
  "standard": {
    "globals": [
      "test",
      "describe",
      "it",
      "expect",
      "Iterator",
      "IteratorResult",
      "$ReadOnlyArray"
    ],
    "ignore": [
      "src/generated"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true
  }
}
