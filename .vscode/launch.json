    {
      "type": "node",
      "request": "launch",
      "name": "Launch via jest",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceRoot}",
      "args": [
        "--runInBand", "--coverage", "build"
      ],
      // "runtimeArgs": [
      //   "--harmony"
      // ],
      // "protocol": "inspector",
      "outFiles": [
        "${workspaceRoot}/build/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/build/index.js",
      "protocol": "inspector",
      "outFiles": [
        "${workspaceRoot}/build/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Port",
      "address": "localhost",
      "port": 5858
    },
  ]
}