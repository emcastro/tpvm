{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Jest",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceRoot}",
      "args": [
        "--runInBand", "--coverage", "build"
      ],
      "outFiles": [
        "${workspaceRoot}/build/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (index.js)",
      "program": "${workspaceRoot}/build/index.js",
      "protocol": "inspector",
      "outFiles": [
        "${workspaceRoot}/build/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (parser.js)",
      "program": "${workspaceRoot}/build/parsing/parser.js",
      "protocol": "inspector",
      "outFiles": [
        "${workspaceRoot}/build/**/*.js"
      ]
    },    
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Port",
      "address": "localhost",
      "port": 5858
    }
  ]
}