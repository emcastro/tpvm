{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "Launch Jest",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceRoot}",
      "args": [
        "--runInBand",
        "--config=jest-debug.json"
      ],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (index.js)",
      "program": "${workspaceRoot}/dist/index.js",
      "protocol": "inspector",
      "args": [
        "--harmony_tailcalls",
        "--use_strict",
        "--nolazy"
      ],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (parser.js)",
      "program": "${workspaceRoot}/dist/parsing/parser.js",
      "protocol": "inspector",
      "sourceMaps": true      
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (microjest.js)",
      "program": "${workspaceRoot}/dist/microjest.js",
      "protocol": "inspector",
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeArgs": [
        "--nolazy"
      ],
      "sourceMaps": true      
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (test2.js)",
      "program": "${workspaceRoot}/dist/test2.js",
      "protocol": "inspector",
      "sourceMaps": true      
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (bench)",
      "program": "${workspaceRoot}/bench/switchcase.bench.js",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Port",
      "address": "localhost",
      "port": 5858
    }
  ]
}