_spy(self) = #spy(self)

_flatmap(list, f) = {
    if (list.empty) #nil
    else {
        f(list.head) ++ list.tail.flatmap(f)
    }
}

_map(list, f) = list.flatmap(e->#list(f(e))) // ici problème de type

_filter(list, f) = {
    if (list.empty) #nil
    else {
        if (f(list.head))
            #list(list.head) ++ list.tail.filter(f) // ici problème de type
        else
            list.tail.filter(f)
    }
}

_split(list, isDelim) = {
    if (list.empty) #nil
    else {
        if (isDelim(list.head)) // [ delim, a, b, c ] => [[],[a,b,c]]
            #list(#nil) ++ list.tail.split(isDelim)
        else {
            suite = list.tail.split(isDelim)
            if (suite.empty)
                #list(#list(list.head))
            else
                #list(#list(list.head)++suite.head)++suite.tail
        }
    }
}

_foldLeft(list, zero, op) = {
    loop(list, state) = {
        if (list.empty) state
        else {
            loop(list.tail, state op list.head)
        }
    }

    loop(list,zero)
}

_join(list, delim) = {
    delimPseudoLine = #list(delim)
    list.flatmap(item->delimPseudoLine++item).asString
}

