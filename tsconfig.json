{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "es2017.object",
      "es2017.string"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "inlineSourceMap": true, // better for Jest debugging
    "inlineSources": true,
    "pretty": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ]
}