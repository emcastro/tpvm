{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["dom", "es6", "scripthost","dom.iterable","es2017.object"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "dist",
        // "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}