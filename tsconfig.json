{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "dom.iterable",
      "es2017.object"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "inlineSourceMap": true, // better for Jest debugging
    "inlineSources": true,
    "pretty": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}