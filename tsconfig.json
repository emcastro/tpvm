{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "inlineSourceMap": true, // better for Jest debugging
    "inlineSources": true,
    "pretty": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}